
<div class="center jumbotron">
<h1>Parking Fee Calculator</h1>
<h4> Please choose </h4>

<%= form_for @parking do |f| %>

   <% if current_user %>
 
     <label>
       <%= f.radio_button :parking_type, "short-term" %> short-term
     </label>
 
     <label>
       <%= f.radio_button :parking_type, "long-term" %> long-term
     </label>
 
   <% else %>
     general
   <% end %>

  <p><%= f.submit "start to count" %></p>

<% end %>



</div>
<%= link_to image_tag("parking-sign.jpg", alt: "parking sign")  %>

